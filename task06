#include <iostream>
using namespace std;

int main()
{
    float P, R, I;
    int T;

    cout << "Введіть суму P (плаваючого типу): ";
    cin >> P;
    cout << "Введіть період позики T (ціле число): ";
    cin >> T;
    cout << "Введіть процентну ставку R (плаваючого типу): ";
    cin >> R;

    I = (P * T * R) / 100;

    printf("Прості відсотки (float): %.2f\n", I);
    cout << "Прості відсотки (int): " << (int)I << endl;
}
